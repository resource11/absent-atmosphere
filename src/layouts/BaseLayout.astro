---
import Header from "../components/Header/Header.astro";
import Footer from "../components/Footer/Footer.astro";
import "../styles/page-styles/BaseLayout.css";
const { pageTitle, pageH1Class, pageBgImage, pageBgImageClass } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <article class="bodyWrapper">
      <img src={pageBgImage} alt="" class={pageBgImageClass} />
      <header>
        <h1 class={pageH1Class}>{pageTitle}</h1>
      </header>
      <article class="contentWrapper">
        <slot />
      </article>
    </article>
    <Footer />
  </body>
</html>
